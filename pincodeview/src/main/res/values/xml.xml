<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PinCodeView">
        <attr name="PCV_buttonBackground" format="reference" />
        <attr name="PCV_buttonTextColor" format="color" />
        <attr name="PCV_buttonTintColor" format="color" />
        <attr name="PCV_cleanSrc" format="reference" />
        <attr name="PCV_cleanBackground" format="reference|color" />
        <attr name="PCV_cleanTint" format="color" />

        <attr name="PCV_pinsSrc" format="reference" />
        <attr name="PCV_pinColor" format="color" />

        <!--
            Animation on a successful event.
            Default: enabled
         -->
        <attr name="PCV_enableSuccessAnimation" format="boolean" />

        <!--
            Animation on fail event
            Default: enabled
         -->
        <attr name="PCV_enableFailAnimation" format="boolean" />
    </declare-styleable>
</resources>